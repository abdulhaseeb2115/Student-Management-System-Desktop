<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vp_Semester_Project"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Vp_Semester_Project.MainWindow"
        mc:Ignorable="d"
        Height="300" Width="400" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
    WindowStyle="None"
    Background="Transparent" BorderBrush="Transparent" BorderThickness="0" AllowsTransparency="True">

    <Border CornerRadius="20" BorderThickness="2" BorderBrush="White" Background="#FF6926C7">
        <Grid Margin="20" Background="Transparent" >
            <Label Content="Department Management system" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Foreground="White"/>


            <Grid Width="300" Height="10" Margin="0,0,0,40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="Aqua">

                <ProgressBar x:Name="bar" Maximum="100" IsIndeterminate="False"/>

                <Label Name="progress" FontSize="8" VerticalAlignment="Center" HorizontalAlignment="Center"  Padding="0" />

            </Grid>
        </Grid>
    </Border>
</Window>
