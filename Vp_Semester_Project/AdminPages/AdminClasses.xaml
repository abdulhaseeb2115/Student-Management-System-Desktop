<Page x:Class="Vp_Semester_Project.AdminClasses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vp_Semester_Project"
      mc:Ignorable="d" 
      d:DesignHeight="676" d:DesignWidth="1100"
      Title="AdminClasses">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="D:\1_UNI\Programming\C#\Vp_Semester_Project\Vp_Semester_Project\Dictionaries\InternalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="White">
        <!-- side nav -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="180" Margin="10,0,0,0" Background="MediumPurple">

            <!-- Heading -->
            <TextBlock HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="CLASSES" VerticalAlignment="Top" Width="180" Height="52" FontSize="28" Foreground="White" Padding="20,10,0,0"/>


            <!-- Navigation -->
            <StackPanel HorizontalAlignment="Stretch" Margin="0,100,0,0" Width="180">

                <Button x:Name="viewButton" Content="VIEW CLASS" Padding="-5,0,0,0" Style="{StaticResource InternalSideBarButton}" Click="viewClass_click"/>

                <Button x:Name="addButton" Content="ADD SUBJECT" Padding="0,0,0,0" Style="{StaticResource InternalSideBarButton}" Click="addSubject_click"/>

                <Button x:Name="deleteButton" Content="DELETE SUBJECT" Padding="10,0,0,0" Style="{StaticResource InternalSideBarButton}" Click="deleteSubject_click"/>

            </StackPanel>

        </StackPanel>

        <Frame x:Name="PageFrame" HorizontalAlignment="Left" Height="676" Margin="190,0,0,0" VerticalAlignment="Top" Width="910"/>
    </Grid>
</Page>
